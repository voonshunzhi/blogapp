<h3 class="text-center">Edit article :</h3>
<div class="row">
    <div class="col-md-12">
        <%= form_for @article,html:{class:"form-horizontal"},role:"form" do |form|%>
            
            <% if @article.errors.any?%>
                <div class="panel panel-danger offset-md-1">
                    <div class="panel-heading">
                        <h2 class="panel-title"><%= pluralize(@article.errors.count,'error')%> prevent this article from being saved : </h2>
                        <div class="panel-body">
                             <ul>
                                <% @article.errors.full_messages.each do |msg|%>
                                    <li><%= msg %></li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                </div>
               
            <% end %>
            
            <div class="form-group">
                <div class="control-label col-md-1">
                    <%= form.label :title%>
                </div>
                <div class="col-md-11">
                    <%= form.text_field :title,class:"form-control",autofocus:true,placeholder:"Enter title here"%>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-1">
                    <%= form.label :body%>
                    </div>
                <div class="col-md-11">
                    <%= form.text_area :body,class:"form-control",autofocus:true,placeholder:"Enter title here",rows:10%>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-11 offset-md-1">
                    <%= form.submit class:"btn btn-primary btn-lg pull-right"%>
                </div>
            </div>
        <% end %>
    </div>
</div>