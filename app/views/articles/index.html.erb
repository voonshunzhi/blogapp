<h1>Hello world this is my first test-driven development using gem</h1>
<% if user_signed_in? %>
<%= link_to "New article",new_article_path,class:"btn btn-lg btn-default",id:"new-article-btn"%>
<% end %>
<% if @articles.empty? %>
    <h1 id="no-articles">No articles created.</h1>
<% else %>
    <%@articles.each do |article|%>
    <div class="well well-lg">
        <div class="article-title">
            <%= link_to article.title,article_path(article) %>
        </div>
        <div class="article-body">
            <%= truncate(article.body,length:500)%>
        </div>
        
        <div class="author">
            <small>Created by : <%=article.user.email %></small>
        </div>
    </div>
    <%end%>
<% end %>