<h3 class="text-center">Add new article :</h3>

<div class="row">
    <div class="col-md-12">
        <%= form_for @article,html:{class:"form-horizontal"},role:"form" do |form|%>
            <div class="form-group">
                <div class="control-label col-md-1">
                    <%= form.label :title%>
                </div>
            </div>
            <div class="col-md-11">
                <%= form.text_field :title,class:"form-control",autofocus:true,placeholder:"Enter title here"%>
            </div>
            <div class="form-group">
                <div class="control-label col-md-1">
                    <%= form.label :body%>
                </div>
            </div>
            <div class="col-md-11">
                <%= form.text_area :body,class:"form-control",autofocus:true,placeholder:"Enter title here"%>
            </div>
            <div class="form-group">
                <div class="col-md-11 offset-md-1">
                    <%= form.submit class:"btn btn-primary btn-lg pull-right"%>
                </div>
            </div>
        <% end %>
    </div>
</div>